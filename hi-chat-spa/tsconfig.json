{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"],
  "theme": {
    "extend": {
      "colors": {
        "primary": "#01AA85",
        "secondary": "#FFFFFF",
        "primary-text": "#2C2C2C",
        "secondary-text": "#6D6968",

        "secondary-dark": "#EFF1F2",
        "primary-light": "#E5F6F3",

        "danger": "#FF5151",
        "success": "#3FCC35",

        // "border": "#1F2937"
      }
    }
  },
}
